<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="{{ app.request.basepath }}/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="{{ app.request.basepath }}/css/ananasanam.css" rel="stylesheet">
    <link href="{{ app.request.basepath }}/favicon.ico" rel="icon" type="image/x-icon" />
    <title>Ananas Anam - {% block title %}{% endblock %}</title>

    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.8/jquery.min.js"></script>
    <script src="{{ app.request.basepath }}/js/smooth_scroll.js"></script>
</head>

<body>
    <div class="container">
        <nav class="navbar navbar-default navbar-fixed-top navbar-inverse" role="navigation">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-collapse-target">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="{{ path('home') }}"><strong> Ananas Anam </strong></a>
                </div>
                <div class="collapse navbar-collapse" id="navbar-collapse-target">
                    <ul class="nav navbar-nav navbar-right">
                        <li><a href="#anchor-contact"> <span class="glyphicon glyphicon-envelope"></span> Contact us</a></li>
                    </ul>
                </div>
            </div><!-- /.container -->
        </nav>
        <div id="content">{% block content %}{% endblock %}</div>
    </div>
    <footer class="footer">
        <div id="anchor-contact" class="container">
            <h3> Contact us : </h3>
            London office (HQ): <br/>
            InnovationRCA <br/>
            Royal College of Art Dyson Building <br/>
            20 Howie Street <br/>
            London SW11 4AS – UK <br/> <br/>

            Tel: +44 (0)20 7590 4458 <br/><br/>

            Barcelona office: <br/>
            C/Roger de Llúria 95, 5º1ªB <br/>
            08009 Barcelona – Spain <br/><br/>

            Contact email: <a href="mailto:pinatex@ananas-anam.com">pinatex@ananas-anam.com</a> <br/><br/>
            Leave us a message : <br/>
            <!-- Button contact -->
            <!-- Trigger the modal with a button -->
            <a type="button" class="contact glyphicon glyphicon-envelope" data-toggle="modal" data-target="#myModal"></a>

            <!-- Modal -->
            <div id="myModal" class="modal fade" role="dialog">
                <div class="modal-dialog">

                    <!-- Modal content-->
                    <div class="modal-content">
                        <form role="form" action="{{ path('contact') }}" method="post">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                                <h3>Contact us</h3>
                            </div>
                            <div class="modal-body">
                                {% for flashMessage in app.session.flashbag.get('success') %}
                                    <div class="alert alert-success">
                                        {{ flashMessage }}
                                    </div>
                                {% endfor %}
                                    <div class="form-group">
                                        <input type="text" class="form-control contact" id="contact_name" placeholder="Name" autofocus required></input>
                                    </div>
                                    <div class="form-group">
                                        <input type="email" class="form-control contact" id="contact_email" placeholder="Email" required></input>
                                    </div>
                                    <div class="form-group">
                                        <textarea rows="4" type="text" class="form-control contact" id="contact_commentary" placeholder="Your message" required></textarea>
                                    </div>
                            </div>
                            <div class="modal-footer">
                                <button type="submit" class "btn btn-default"><span class="glyphicon glyphicon-ok"></span> Send</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

        </div>
        <br/>
    </footer>

    <!-- jQuery -->
    <script src="{{ app.request.basepath }}/lib/jquery/jquery.min.js"></script>
    <!-- JavaScript Boostrap plugin -->
    <script src="{{ app.request.basepath }}/lib/bootstrap/js/bootstrap.min.js"></script>

</body>
</html>
